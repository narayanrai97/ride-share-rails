<!DOCTYPE html>
<html>
  <head>
    <title>Rider</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <!-- <li class="nav-item < request.path =~ /welcome/ ? 'active' : '' %>">
            < link_to 'Home', welcome_rider_path, :class => 'nav-link active' %>
          </li> -->
          <li class="nav-item">
              <%= link_to image_tag('crsn.png', size: '45x45'), rides_path, :class => 'nav-link active' %>
          </li>
          <li class="nav-item">
              <%= link_to 'Change Password', edit_rider_registration_path, :class => 'nav-link' %>
          </li>

        </ul>
        <div class="sessions">
          <% if rider_signed_in? %>
            <%= link_to "Logout", destroy_rider_session_path, method: :delete, :class => 'navbar-link'  %>
          <% else %>
            <%= link_to "Login", new_rider_session_path, :class => 'navbar-link'  %>
          <% end %>
        </div>
      </div>
    </nav>

    <div class="flash-messages">
      <% if notice %>
        <p class="alert alert-success"><%= notice %></p>
      <% end %>
      <% if alert %>
        <p class="alert alert-danger"><%= alert %></p>
      <% end %>
    </div>

    <div class="content">
      <%= yield %>
    </div>

    <%= render 'layouts/footer' %>
  </body>
</html>
