<!DOCTYPE html>
<html>
  <head>
    <title>Rider</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <!-- <li class="nav-item < request.path =~ /welcome/ ? 'active' : '' %>">
            < link_to 'Home', welcome_rider_path, :class => 'nav-link active' %>
          </li> -->
          <li class="nav-item <%= request.path =~ /rides/ ? 'active' : '' %>">
              <%= link_to 'Rides', rides_path, :class => 'nav-link active' %>
          </li>
          <li class="nav-item">
              <%= link_to 'Change Password', edit_rider_registration_path, :class => 'nav-link' %>
          </li>

        </ul>
        <div class="sessions">
          <% if rider_signed_in? %>
            <%= link_to "Logout", destroy_rider_session_path, method: :delete, :class => 'navbar-link'  %>
          <% else %>
            <%= link_to "Login", new_rider_session_path, :class => 'navbar-link'  %>
          <% end %>
        </div>
      </div>
    </nav>

    <% flash.each do |type, message| %>
    <div class="alert <%= bootstrap_class_for(type) %> alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <%= message %>
    </div>
    <% flash.clear %>
    <% end %>

    <div class="content">
      <%= yield %>
    </div>

    <%= render 'layouts/footer' %>
  </body>
</html>
