<% if @ride.id %>
<% url = admin_ride_path(@ride) %>
<% else %>
<% url = admin_ride_index_path %>
<% end %>
<%= form_with(url: url , model: @ride, local: true) do |form| %>


  <% if @ride.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@ride.errors.count, "error") %> prohibited
        this ride from being saved:
      </h2>
      <ul>
        <% @ride.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<div class="form-row">
  <div class="form-group offset-md-1 col-8">
    <%= form.label :rider_id %><br>
    <%= form.collection_select :rider_id, Rider.where("organization_id =? AND is_active = ?", current_user.organization_id, true), :id, :full_name, { :include_blank => ' ' } %>


  </div >
  <div class="form-group offset-md-1 col-4">

    <%= form.label :pick_up_time %><br>
    <%= form.datetime_local_field :pick_up_time,class: "form-control" %>
  </div>

</div>

<div class="form-row">

  <div class="form-group offset-md-1 col-md-10">
    <%= form.label :start_street %><br>
    <%= form.text_field :start_street,class: "form-control" %>
  </div>

</div>

<div class="form-row">

    <div class="form-group offset-md-1 col-4">
      <%= form.label :start_city %><br>
      <%= form.text_field :start_city,class: "form-control" %>
    </div>

    <div class="form-group col-4">
      <%= form.label :start_state %><br>
      <%= form.text_field :start_state,class: "form-control" %>
    </div>

    <div class="form-group col-2">
      <%= form.label :start_zip %><br>
      <%= form.text_field :start_zip,class: "form-control" %>
    </div>

</div>

<div class="form-row">

    <div class="form-group offset-md-1 col-md-10">
    <%= form.label :end_street %><br>
    <%= form.text_field :end_street,class: "form-control" %>
  </div>

</div>

<div class="form-row">

  <div class="form-group offset-md-1 col-4">
      <%= form.label :end_city %><br>
      <%= form.text_field :end_city,class: "form-control" %>
    </div>

    <div class="form-group col-4">
      <%= form.label :end_state %><br>
      <%= form.text_field :end_state,class: "form-control" %>
    </div>

    <div class="form-group col-2">
      <%= form.label :end_zip %><br>
      <%= form.text_field :end_zip,class: "form-control" %>
    </div>

</div>

  <div class="form-row">
    <div class="form-group  col-md-10 offset-md-1">
    <%= form.label :reason %><br>
    <%= form.text_field :reason,class: "form-control" %>
    </div>
  </div>
<% if false %>
  <div class="form-row">
    <div class="form-group  col-md-10 offset-md-1">
    <%= form.label :status %><br>
    <%= form.text_field :status,class: "form-control" %>
    </div>
  </div>
<% end %>
<div class="form-row">
  <div class="form-group col-md-1 offset-md-1">
    <%= link_to 'Back', admin_ride_index_path, class: "btn btn-outline-primary my-2 my-sm-0" %>
  </div>
  <div class="form-group col-md-1 offset-md-8">
    <%= form.submit yield(:button_text), class: "btn btn-outline-success my-2 my-sm-0" %>
  </div>
</div>

<% end %>
