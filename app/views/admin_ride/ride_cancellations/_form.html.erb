<% if @ride.id %>
  <% url = cancel_admin_ride_path(@ride) %>
<% else %>
  <% url = review_admin_ride_path %>
<% end %>

<%= form_with(url: url , model: @ride, local: true) do |form| %>
  <% if @ride.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@ride.errors.count, "error") %> prohibited
        this ride from being saved:
      </h2>
      <ul>
        <% @ride.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-row">
    <div class="form-group offset-md-1 col-8">
      <%= form.label :reasons %><br>
      <%= form.collection_select :cancellation_reason, CancellationReason.where("organization_id =?", current_user.organization_id), :id, :name, class: 'dropdown' %>
    </div>
  </div><br/>
  <div class="form-row">
    <div class="form-group col-md-1 offset-md-1">
      <%= link_to 'Back', :back, class: "btn btn-outline-primary" %>
    </div>
    <div class="form-group col-md-1 offset-md-8">
      <%= form.submit "Cancel", class: "btn btn-outline-success", method: :put %>
    </div>
  </div>
<%end%>
