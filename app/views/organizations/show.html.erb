<h4>ORGANIZATION</h4>

<p>
  <strong>ID:</strong>
  <%= @organization.id%>
</p>

<p>
  <strong>Name:</strong>
  <%= @organization.name %>
</p>

<h2>Locations:</h2>
<% @locations.each do |location| %>
  <p><%= location.street %>, <%= location.city %> <%= location.state %>, <%= location.zip  %></p>
<% end %>

<%= link_to 'Edit', edit_organization_path(@organization) %> |
<%= link_to 'Back', organizations_path %>